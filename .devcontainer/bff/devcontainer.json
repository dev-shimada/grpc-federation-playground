{
    "name": "grpc-federation-playground-bff",
    "dockerComposeFile": ["../compose.yaml", "./compose.yaml"],
    "service": "bff",
    "workspaceFolder": "/workspace/bff",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go",
                "GitHub.copilot",
                "RooVeterinaryInc.roo-cline",
                "bufbuild.vscode-buf",
                "Mercari.grpc-federation"
            ]
        }
    },
    "remoteUser": "root",
    "postCreateCommand": "/bin/sh ../.devcontainer/bff/post_create.sh"
}
